{
  "name": "Fair Steam",
  "description": "Watch real gameplay video on Steam!",
  "version": "1.0.7",
  "manifest_version": 2,
  "permissions": [
    "*://*.steamstatic.com/*",
	"*://store.steampowered.com/app/*",
	"webRequest",
    "webRequestBlocking",
	"storage"
  ],
  "applications": {
	  "gecko": {
		"id": "eugene@whitechest.com"
	  }
  },
  "web_accessible_resources": ["js/player_init.js",
								"js/gamehighlightplayer_updated.js", 
								"js/gamehighlightplayer_stub.js",
								"img/youtube_icon.png"],							    
  "background": {
    "scripts": ["js/background.js"],
	"persistent": true
  },
  "icons": {"128": "img/icon128px.png"},
  "content_scripts": [
    {
      "matches": ["*://store.steampowered.com/app/*"],
      "js": ["js/jquery-1.12.1.js", "js/content_on_ready.js"], 
	  "css": ["css/bettersteam.css"]
    }
  ]
}
